.counter-container
  display: flex
  align-items: center
  justify-content: center
  gap: 16px  // Расстояние между элементами
  padding: 16px  // Отступы по краям контейнера
  border-radius: 8px  // Закругленные углы контейнера
  background-color: #f0f0f0  // Цвет фона для контекста
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1)  // Легкая тень для контраста

.counter-label
  font-size: 20px
  font-weight: bold

.counter-increment,
.counter-decrement
  padding: 8px 16px
  font-size: 18px
  border-radius: 4px
  cursor: pointer
  background-color: #FF7700
  color: white
  border: none
  transition: background-color 0.3s ease

  &:hover
    background-color: #e96d00
