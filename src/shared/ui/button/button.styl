.btn
  border none
  border-radius 13px
  font-weight 600
  cursor pointer
  display flex
  align-items center
  justify-content center
  gap 6px
  position relative
  transition all 500ms cubic-bezier(0, -0.3, 0.5, 1.3)
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  max-lines 1
  padding 8px 12px
  font-size 16px

  &.primary
    background #FF7700
    color white
    &:hover
      background #FF7700

  &.secondary
    background #8366561F
    color white
    &:hover
      background #8366561F

  &.small
    font-size 14px
    padding 8px 10px

  &.medium
    font-size 16px
    padding 10px 14px

  &.large
    font-size 18px
    padding 16px 16px

  &.disabled
    opacity 0.36
    cursor not-allowed

  &.loading
    position relative
    pointer-events none
    justify-content center

  &.pressed
    transform scale(0.95)
    &:after
      content ""
      position absolute
      top 50%
      left 50%
      width 100%
      height 100%
      background rgba(0, 0, 0, 0.2)
      border-radius 8px
      transform translate(-50%, -50%) scale(1)
      opacity 0.2
      transition transform 500ms cubic-bezier(0, -0.3, 0.5, 1.3)

  &:hover
    &:after
      content ""
      position absolute
      inset 0
      background rgba(255, 255, 255, 0.12)
      transition all 500ms cubic-bezier(0, -0.3, 0.5, 1.3)

