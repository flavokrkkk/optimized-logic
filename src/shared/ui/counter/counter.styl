.counter
  display flex
  justify-content center
  align-items center
  border-radius 50%
  font-size 14px
  font-weight bold
  color white
  position relative
  transition all 0.3s ease
  min-width 16px
  min-height 16px

  &.primary
    background-color #2FB675

  &.secondary
    background-color #6C757D

  &.pulse
    animation: pulse-animation 1s infinite

  &.size-8
    width 8px
    height 8px
    font-size 0px
    padding 0
    stroke-width 1px

  &.size-12
    width 12px
    height 12px
    font-size 0px
    padding 0
    stroke-width 2px

  &.size-16
    width 16px
    height 16px
    padding 4px
    font-size 12px
    stroke-width 2px

  &.size-20
    width 20px
    height 20px
    padding 4px
    font-size 14px
    stroke-width 2px

  &.size-24
    width 24px
    height 24px
    padding 6px
    font-size 16px
    stroke-width 3px

  &.stroke
    border: solid var(--counter-stroke-color, rgba(0, 0, 0, 0.2)) 2px

  .counter-quantity
    font-size 12px
    color white

@keyframes pulse-animation
  0% 
    transform scale(1)
    opacity 0.8
  50% 
    transform scale(1.1)
    opacity 1
  100% 
    transform scale(1)
    opacity 0.8
